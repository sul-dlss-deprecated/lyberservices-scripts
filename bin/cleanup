#! /usr/bin/env ruby

require File.expand_path(File.dirname(__FILE__) + '/../config/boot')

def help(error_msg)
  abort "#{error_msg}\n\nUsage:\n    cleanup YAML_CONFIG_FILE stacks,dor,stage,symlinks [dry_run]\n"
end

# Load YAML config file for the bundle of materials to be pre-assembled.
help "Incorrect N of arguments." if ARGV.size < 2
yaml_config = ARGV.shift
help "YAML file not found." unless File.file? yaml_config
params = YAML.load(File.read yaml_config)

steps=ARGV.shift.split(',').collect!{|x| x.to_sym}
dry_run=ARGV.shift ? true : false

begin
  b = PreAssembly::Bundle.new params
  b.cleanup(steps,dry_run)
rescue PreAssembly::BundleUsageError => e
  help e.message
end
